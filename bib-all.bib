@article{reaxff,
  title      = {{{ReaxFF}}:\, {{A Reactive Force Field}} for {{Hydrocarbons}}},
  shorttitle = {{{ReaxFF}}},
  author     = {{van Duin}, Adri C. T. and Dasgupta, Siddharth and Lorant, Francois and Goddard, William A.},
