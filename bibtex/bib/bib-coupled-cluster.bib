@article{pno-lccsdt-1,
  title      = {Communication: {{Improved}} Pair Approximations in Local Coupled-Cluster Methods},
  shorttitle = {Communication},
  author     = {Schwilk, Max and Usvyat, Denis and Werner, Hans-Joachim},
  year       = {2015},
